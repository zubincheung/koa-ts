{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noEmit": false,
    "noEmitHelpers": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "strictNullChecks": false,
    "allowUnreachableCode": true,
    "lib": [
      "es2017"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ],
    // "types": [
    //     "lodash",
    //     "mocha",
    //     "node",
    //     "chai",
    //     "sequelize"
    // ],
    "outDir": "./build",
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "build",
    "**/*.test.ts",
    "temp"
  ],
  "compileOnSave": true,
  "buildOnSave": true
}
