{
  "apps": [
    {
      "name": "cw_epaper-schedule",
      "script": "build/index.js",
      "exec_mode": "cluster",
      "instances": "1",
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "error_file": "./logs/pm2/pm2-err.log",
      "out_file": "./logs/pm2/pm2-out.log",
      "max_memory_restart": "1G",
      "env_pro": {
        "NODE_ENV": "production"
      },
      "env_dev": {
        "NODE_ENV": "development"
      },
      "env_test": {
        "NODE_ENV": "test"
      }
    }
  ]
}
