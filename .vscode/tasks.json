{
  "version": "0.1.0",
  "tasks": [
    {
      "taskName": "tsc-watch",
      "command": "npm",
      "isShellCommand": true,
      "args": ["run", "watch"],
      "isBackground": true,
      "isBuildCommand": true,
      "problemMatcher": "$tsc-watch",
      "showOutput": "always"
    },
    {
      "taskName": "tsc-build",
      "command": "npm",
      "isShellCommand": true,
      "args": ["run", "build"],
      "isBackground": false,
      "isBuildCommand": true,
      "problemMatcher": "$tsc",
      "showOutput": "always"
    }
  ]
}
