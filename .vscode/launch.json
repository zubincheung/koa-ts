    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",  
            "name": "本地nodemon启动",  
            "protocol": "auto",  
            "preLaunchTask": "tsc-watch",  
            "runtimeExecutable": "npm",  
            "runtimeArgs": [  
                "run",  
                "debug"  
            ],  
            "env": {  
                "NODE_ENV": "development"  
            },  
            "restart": true,  
            "port": 5858,  
            "console": "integratedTerminal",  
            "internalConsoleOptions": "neverOpen",  
            "outFiles": [  
                "${workspaceRoot}/build/**/*.js"  
            ]  
        }
    ]
}